<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TelaPrincipal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INCLUIR LANÇAMENTOS"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:onClick="incluir_clique"
            android:textSize="20dp"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LISTAR LANÇAMENTOS"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:onClick="listar_clique"
            android:textSize="20dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Total em crédito: \nR$0,00"
            android:id="@+id/tv_credito"
            android:layout_gravity="center_horizontal"
            android:textSize="35dp"
            android:textColor="#FF264EFF"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Total em débito: \nR$0,00"
            android:id="@+id/tv_debito"
            android:layout_gravity="center_horizontal"
            android:textSize="35dp"
            android:textColor="#ff4545"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Saldo atual: \nR$0,00"
            android:id="@+id/tv_saldo"
            android:layout_gravity="center_horizontal"
            android:textSize="35dp"
            android:textColor="#000000"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</RelativeLayout>
